@model List<Usuario>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>Administrador de Usuarios</h2>
<div class="container"> 



<table class="table">
    <thead>
        <tr>
                <th scope="col" class="table-primary">ID</th>
                <th scope="col" class="table-primary">Nombre</th>
                <th scope="col" class="table-primary">Contraseña</th>
                <th scope="col" class="table-primary">Tipo Usuario</th>
                <th scope="col" class="table-primary">ACCIÓN</th>
                <th scope="col" class="table-primary"></th>

        </tr>
    </thead>





    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.usuario_id</td>
                <td>@item.user_nombre</td>
                <td>@item.user_contrasena</td>
                <td>@item.user_tipo</td>
                
                <td><a asp-action="" asp-controller="" class="btn btn-secondary" asp-route-id="">Editar</a></td>
                <td><a asp-action="" asp-controller="" class="btn btn-danger" asp-route-id="">Eliminar</a></td>
            </tr>
        </tbody>
    }

</table>
</div>