@{
}
<h2>Administrador de Usuarios</h2>
<div class="container">



    <table class="table table-bordered table-hover">
    <thead>
        <tr>
                <th scope="col" class="table-primary">ID</th>
                <th scope="col" class="table-primary">Nombre</th>
                <th scope="col" class="table-primary">Contraseña</th>
                <th scope="col" class="table-primary">Tipo Usuario</th>
                                <th scope="col" class="table-primary">Rol Usuario</th>

                <th scope="col" class="table-primary">borrar</th>
                <th scope="col" class="table-primary">editar</th>

        </tr>
    </thead>





    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.usuario_id</td>
                <td>@item.user_nombre</td>
                <td>@item.user_contrasena</td>
                <td>@item.user_tipo</td>
                    <td><a asp-action="Editar" asp-controller="Usuario" class="btn btn-secondary" asp-route-id="@item.usuario_id">Editar</a></td>
                    <td><a asp-action="Eliminar" asp-controller="Usuario" class="btn btn-danger" asp-route-id="@item.usuario_id">Eliminar</a></td>
            </tr>
        </tbody>
    }

</table>
</div>