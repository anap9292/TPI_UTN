@using TPI_UTN.Models
@model List<Producto>

<div>
    <h4>Listado de Productos</h4>
</div>

<hr>
<nav class="navbar bg-light">
    <div class="container-fluid">
        <span class="navbar-text">

            <a asp-area="" asp-controller="Producto" asp-action="Guardar" class="btn btn-outline-dark">Agregar un producto</a>

        </span>
    </div>
</nav>


<table class=" table table-bordered table-hover">
    <thead class="table-secondary">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Imagen</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Proveedor</th>
                <th scope="col">Stock</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Producto producto in this.Model)
            {
                <tr>
                    <th scope="row">@producto.id</th>
                    <td><img width="50px" height="50px" src="@producto.imagen"></img></td>
                    <td>@producto.nombre</td>
                    <td>@producto.precio</td>
                    <td>@producto.proveedor</td>
                    <td>@producto.stock</td>
                    <td>
                        <a asp-area="" asp-controller="Producto" asp-action="Editar" asp-route-id="@producto.id" class="btn btn-secondary">Modificar</a>
                        <a asp-area="" asp-controller="Producto" asp-action="Eliminar" asp-route-id="@producto.id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
    </table>

