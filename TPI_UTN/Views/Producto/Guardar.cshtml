@using TPI_UTN.Models
@model Producto

<h1>Agrega un producto</h1>
<div class="formulario">
    <form asp-action="Guardar" asp-controller="Producto" method="post">

        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input asp-for="nombre" type="text" class="form-control" id="NuevoProdNombre" placeholder="Nombre del producto">
        </div>

        <div class="form-group">
            <label for="descripcion">Descripcion</label>
            <textarea asp-for="descripcion" type="text" class="form-control" cols="20" rows="3" id ="NuevoProdDescripcion">Describe el producto...</textarea>
        </div>

        <div class="form-group">
            <label for="descripcion">Imagen</label>
            <input asp-for="imagen" type="url" class="form-control" id ="NuevoProdImagen" placeholder="Ingrese la URL de una imagen...">
        </div>

        <div class="form-group">
            <label for="precio">Precio unitario</label>
            <input asp-for="precio"  class="form-control" id="NuevoProdPrecio" placeholder="Precio unitario">
        </div>

        <div class="form-group">
            <label for="precio">Stock disponible</label>
            <input asp-for="stock" type="number" class="form-control" id="NuevoProdStock" >
        </div>

        <div class="form-group">
            <label for="precio">Proveedor</label>
            <input asp-for="proveedor" type="text" class="form-control" id="NuevoProdProveedor" placeholder="Sólo puede poner un proveedor existente." >
            <a asp-area="" asp-controller="Proveedor" asp-action="Guardar" class="form-text text-muted smallLink">¿Es un nuevo proveedor? Registrelo primero.</a>
        </div>
        <button type="submit" class="btn btn-primary">Agregar</button>

    </form>
</div>


