@{
}
<!--En esta pagina se guardaran los clientes a traves de un formulario-->
<h1>Vista de guardar funciona!</h1>

<h2>Nuevo Cliente</h2>
<form asp-action="Guardar" asp-controller="Cliente" method="post">
    <div>
        <label>Nombre</label>
        <input asp-for="clie_nombre" type="text" class="form-control">
    </div>
    <div>
        <label>Apellido</label>
        <input asp-for="clie_apellido" type="text" class="form-control">
    </div>
    <div>
        <label>Cuil</label>
        <input asp-for="clie_cuil" type="number" class="form-control">
    </div>
    <div>
        <label>DNI</label>
        <input asp-for="clie_dni" type="number" class="form-control">
    </div>
    <div>
        <label>Razon Social</label>
        <input asp-for="clie_razon_social" type="text" class="form-control">
    </div>
    <div>
        <label>Usuario</label>
        <input asp-for="clie_user" type="number" class="form-control">
    </div>
    <div>
        <label>Tipo cliente</label>
        <input asp-for="clie_tipo" type="number" class="form-control" placeholder="1 Administrador,2 Vendedor,3 Cliente">
        
    </div>


    <button type="submit">Enviar</button>



</form>