@using TPI_UTN.Models.Proveedor
@model List<Categoria>
<h1>ABM CATEGORíAS</h1>

<a asp-action="Guardar" asp-controller="Categoria" class="btn btn-primary">Crear Categoria</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>

         
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@item.id</td>
                <td>@item.nombre</td>
                <td><a asp-action="Editar" asp-controller="Categoria" class="btn btn-secondary" asp-route-id="@item.id">Editar</a>
                <a asp-action="Eliminar" asp-controller="Categoria" class="btn btn-danger" asp-route-id="@item.id">Eliminar</a>
                </td>
            </tr>
        </tbody>
    }

</table>